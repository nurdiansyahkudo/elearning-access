<odoo>
  <template id="slide_main_sweetalert" inherit_id="website_slides.slide_main">
    <!-- Sisipkan setelah konten channel -->
    <xpath expr="//div[contains(@class, 'o_wslides_channel_body')]" position="after">
      <t t-if="popup_message">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
          document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
              icon: 'warning',
              title: 'Akses Ditolak',
              text: "<t t-esc='popup_message' />",
              confirmButtonText: 'Oke'
            });
          });
        </script>
      </t>
    </xpath>
  </template>
</odoo>
